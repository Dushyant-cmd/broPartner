<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/primary_stroke_bg"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="4dp">

        <RelativeLayout
            android:layout_marginTop="@dimen/_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/monserrat_semibold"
                android:text="Honda 5G"
                android:theme="@style/textStyle" />

            <TextView
                android:id="@+id/advert_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/dotted_border_card_white"
                android:paddingVertical="4dp"
                android:paddingHorizontal="@dimen/_8dp"
                android:text="2000"
                android:theme="@style/textStyle" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ttl_chg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Total cost: \u20b9 3000(as per \u20B9 20 /hour)"
            android:theme="@style/textStyle" />

        <TextView
            android:id="@+id/ext_chg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Extra charge: \u20B9 20"
            android:theme="@style/textStyle" />

        <TextView
            android:id="@+id/date_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="From 1-10-2023 6:21:00 To 1-10-2023 1:28:00"
            android:theme="@style/textStyle" />

        <TextView
            android:id="@+id/total_hour_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Total hour: 20"
            android:theme="@style/textStyle" />

        <TextView
            android:id="@+id/pay_sta_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/monserrat_semibold"
            android:text="Payment completed online."
            android:layout_marginBottom="@dimen/_8dp"
            android:textColor="@color/primary"
            android:theme="@style/textStyle" />

        <Button
            android:id="@+id/complete_btn"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8dp"
            android:text="Complete"
            android:theme="@style/textStyle" />

        <Button
            android:id="@+id/call_btn"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8dp"
            android:text="Contact-Us"
            android:theme="@style/textStyle" />

        <LinearLayout
            android:id="@+id/pending_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reject_btn"
                android:layout_width="@dimen/_10dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_weight="1"
                android:background="@drawable/primary_stroke_bg"
                android:gravity="center"
                android:text="Reject"
                android:theme="@style/textStyle" />

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="@dimen/_10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_stroke_bg"
                android:text="Accept"
                android:theme="@style/textStyle" />
        </LinearLayout>
    </LinearLayout>
</layout>